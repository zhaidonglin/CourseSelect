@model CourseSelecting.Web.Models.Manage.SubjectProjectCoursesModel
@using Abp.Web.Mvc.Extensions
@{
    ViewBag.ActiveMenu = "SubjectProjectManage";
}

@section Styles
{
    @Html.IncludeStyle("~/beyondadmin/assets/css/dataTables.bootstrap.css")
}
@section Scripts
{
    @Html.IncludeScript("~/beyondadmin/assets/js/validation/bootstrapValidator.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/select2/select2.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/fuelux/spinner/fuelux.spinner.min.js")

    @Html.IncludeScript("~/beyondadmin/assets/js/datatable/jquery.dataTables.min.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/datatable/ZeroClipboard.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/datatable/dataTables.tableTools.min.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/datatable/dataTables.bootstrap.min.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/datatable/datatables-extend.js")

    @Html.IncludeScript("~/Views/Manage/SubjectProjectCourses.js")
}

<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index")">首页</a>
            </li>
            <li>
                <a href="@Url.Action("Teacher")">项目管理</a>
            </li>
            <li class="active">项目课程列表</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Header -->
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                项目课程列表
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- /Page Header -->
    <!-- Page Body -->
    <div class="page-body">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget  radius-bordered">
                    <div class="widget-header">
                        <span class="widget-caption"></span>
                    </div>
                    <div class="widget-body">
                        <div class="docs-example">
                            <ul class="nav nav-tabs tabs-flat">
                                <li class="active"><a href="#info-tab" data-toggle="tab">项目信息</a></li>
                            </ul>
                            <div class="form-horizontal bv-form">
                                <div class="tab-content tabs-flat">
                                    <div class="tab-pane active" id="info-tab">
                                        <div class="form-group has-feedback">
                                            <label class="col-lg-3 control-label">所属学期</label>
                                            <div class="col-lg-7">
                                                <input type="text" readonly="readonly" value="@Model.SubjectProject.Semester.Name" class="form-control" name="subjectName">
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback">
                                            <label class="col-lg-3 control-label">项目名称</label>
                                            <div class="col-lg-7">
                                                <input type="text" readonly="readonly" value="@Model.SubjectProject.Name" class="form-control" name="subjectName">
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback">
                                            <label class="col-lg-3 control-label">课程列表</label>
                                            <div class="col-lg-7">
                                                <div class="widget radius-bordered">
                                                    <div class="widget-header">
                                                        <div class="widget-buttons buttons-bordered">
                                                            <button class="btn btn-blue btn-xs" id="btnNewCourse">新建课程</button>
                                                        </div>
                                                    </div>
                                                    <div class="widget-body">

                                                        <table id="courseTable" class="table table-striped table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        课程名称
                                                                    </th>
                                                                    <th>
                                                                        学分
                                                                    </th>
                                                                    <th>
                                                                        限选人数
                                                                    </th>
                                                                    <th style="width: 80px;">
                                                                        操作
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-7 col-lg-offset-3">
                                        <input type="hidden" id="subjectId" name="id" value="@Model.SubjectProject.Id" />
                                        <a href="@Url.Action("SubjectProject")" class="btn btn-default">&nbsp;返回列表&nbsp;</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Body -->
</div>


