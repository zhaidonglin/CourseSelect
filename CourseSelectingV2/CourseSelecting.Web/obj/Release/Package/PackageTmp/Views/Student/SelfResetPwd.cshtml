@using Abp.Web.Mvc.Extensions
@{
    ViewBag.ActiveMenu = "About";
}

@section Styles
{
    @Html.IncludeStyle("~/beyondadmin/assets/css/dataTables.bootstrap.css")
}
@section Scripts
{
    @Html.IncludeScript("~/beyondadmin/assets/js/validation/bootstrapValidator.js")
    @Html.IncludeScript("~/Views/Student/SelfResetPwd.js")
}


<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index")">首页</a>
            </li>
            <li class="active">修改密码</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Header -->
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                修改密码
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- /Page Header -->
    <!-- Page Body -->
    <div class="page-body">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget" radius-bordered">
                    <div class="widget-header">
                        <span class="widget-caption"></span>
                    </div>
                    <div class="widget-body">
                        <div class="docs-example">
                            <ul class="nav nav-tabs tabs-flat"></ul>
                            <form id="registrationForm" class="form-horizontal bv-form" method="post" novalidate="novalidate">
                                <div class="form-title">修改密码</div>

                                <div class="form-group has-feedback">
                                    <label class="col-lg-4 control-label">旧密码</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" type="password" name="oldPassword">
                                    </div>
                                </div>

                                <div class="form-group has-feedback">
                                    <label class="col-lg-4 control-label">新密码</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" type="password" name="Password">
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label class="col-lg-4 control-label">确认密码</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" type="password" name="newPassword">
                                    </div>
                                </div>

                                <div class="buttons-preview" style="margin-left:43%;">
                                    <button type="submit" class="btn btn-blue">&nbsp;提&nbsp;&nbsp;&nbsp;&nbsp;交&nbsp;</button>
                                    <a href="@Url.Action("")" class="btn btn-default">&nbsp;返&nbsp;&nbsp;&nbsp;&nbsp;回&nbsp;</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Page Body -->
    </div>
</div>

