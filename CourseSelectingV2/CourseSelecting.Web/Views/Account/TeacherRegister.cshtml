@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@model CourseSelecting.Web.Models.Account.StudentRegisterViewModel
@{
    Layout = null;
}


<html>
<head>
    <meta charset="utf-8" />
    <title>注册</title>

    <meta name="description" content="register page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">

    <!--Basic Styles-->
    <link href="/beyondadmin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/weather-icons.min.css" rel="stylesheet" />

    <!--Beyond styles-->
    <link id="beyond-link" href="/beyondadmin/assets/css/beyond.min.css" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/demo.min.css" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/typicons.min.css" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css"/>

    @Html.IncludeScript("~/beyondadmin/assets/js/select2/select2.js")

    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="/beyondadmin/assets/js/skins.min.js"></script>
</head>
<body>
    <form id="formRegister" method="post" novalidate="novalidate">
        <div class="register-container animated fadeInDown">

            <div class="registerbox bg-white">
                <div class="registerbox-title">教师注册</div>
                <div class="registerbox-caption ">请填写你的信息</div>
                <div class="registerbox-textbox form-group">
                    <input type="text" class="form-control" name="loginid" placeholder="用户名">
                </div>
                <div class="registerbox-textbox form-group">
                    <input type="password" class="form-control" name="pwd" placeholder="密码">
                </div>
                <div class="registerbox-textbox form-group">
                    <input type="password" class="form-control" name="pwd2" placeholder="确认密码">
                </div>
                <div class="registerbox-textbox form-group">
                    <input type="text" class="form-control" name="teacherNo" placeholder="工号">
                </div>
                <div class="registerbox-textbox form-group">
                    <input type="text" class="form-control" name="name" placeholder="姓名">
                </div>
                <div class="registerbox-textbox form-group">
                    @*<input type="text" class="form-control" name="department" placeholder="院系">*@
                    <div>
                        <select id="department" name="department" style="width: 100%;" data-placeholder="请选择院系" tabindex="-1">
                            <option value=""></option>
                            @foreach (var itemstr in L("TeacherSelectValueDepartment").Split(new[] { "," }, StringSplitOptions.RemoveEmptyEntries))
                            {
                                <option value="@itemstr">@itemstr</option>
                            }
                        </select>
                    </div>

                </div>


                <div class="registerbox-submit">
                    <button type="submit" class="btn btn-primary btn-block">立即注册</button>
                </div>
                <div class="loginbox-signup">
                    <a href="@Url.Action("Login")">登录</a>
                </div>
            </div>
        </div>
    </form>
    <!--Basic Scripts-->
    @Scripts.Render("~/beyondadmin/js/basic")

    <!--Beyond Scripts-->
    @Scripts.Render("~/beyondadmin/js/beyond")

    @Scripts.Render("~/Framework/js/abp")

    <script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>

    <script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>

    @Html.IncludeScript("~/beyondadmin/assets/js/validation/bootstrapValidator.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/select2/select2.js")

    <!--Bootstrap Tags Input-->
    <script src="/beyondadmin/assets/js/tagsinput/bootstrap-tagsinput.js"></script>

    <!--Bootstrap Date Picker-->
    <script src="/beyondadmin/assets/js/datetime/bootstrap-datepicker.js"></script>

    <!--Bootstrap Time Picker-->
    <script src="/beyondadmin/assets/js/datetime/bootstrap-timepicker.js"></script>

    <!--Bootstrap Date Range Picker-->
    <script src="/beyondadmin/assets/js/datetime/moment.js"></script>
    <script src="/beyondadmin/assets/js/datetime/daterangepicker.js"></script>

    <!--Jquery Autosize-->
    <script src="/beyondadmin/assets/js/textarea/jquery.autosize.js"></script>

    <!--Fuelux Spinner-->
    <script src="/beyondadmin/assets/js/fuelux/spinner/fuelux.spinner.min.js"></script>

    <!--jQUery MiniColors-->
    <script src="/beyondadmin/assets/js/colorpicker/jquery.minicolors.js"></script>

    <!--jQUery Knob-->
    <script src="/beyondadmin/assets/js/knob/jquery.knob.js"></script>

    <!--noUiSlider-->
    <script src="/beyondadmin/assets/js/slider/jquery.nouislider.js"></script>

    <!--jQRangeSlider-->
    <script src="/beyondadmin/assets/js/jquery-ui-1.10.4.custom.js"></script>
    <script src="/beyondadmin/assets/js/slider/jQRangeSlider/jQAllRangeSliders-withRuler-min.js"></script>

    @Html.IncludeScript("~/Views/Account/TeacherRegister.js")
</body>
</html>
