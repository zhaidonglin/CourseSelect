@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions

@model CourseSelecting.Web.Models.Account.LoginFormViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<!--
Beyond Admin - Responsive Admin Dashboard Template build with Twitter Bootstrap 3
Version: 1.0.0
Purchase: http://wrapbootstrap.com
-->

<html xmlns="http://www.w3.org/1999/xhtml">
<!--Head-->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">

    <!--Basic Styles-->
    <link href="/beyondadmin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/font-awesome.min.css" rel="stylesheet" />

    <!--Beyond styles-->
    <link id="beyond-link" href="/beyondadmin/assets/css/beyond.min.css" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/demo.min.css" rel="stylesheet" />
    <link href="/beyondadmin/assets/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />

    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="/beyondadmin/assets/js/skins.min.js"></script>
    <script src="http://static.geetest.com/static/tools/gt.js"></script>
</head>
<!--Head Ends-->
<!--Body-->
<body>
    <form id="loginFrom" method="post" action="@(Url.Action("Login", "Account"))?returnUrl=@(Model.ReturnUrl)" novalidate="novalidate">
        <div class="login-container animated fadeInDown">
            <div class="loginbox bg-white">
                <div class="loginbox-title">登&nbsp;&nbsp;录</div>
                <div class="loginbox-social">
                    <div class="social-title ">临床技能培训中心预约选课系统</div>
                    <div class="social-buttons">
                        <a href="#" class="navbar-brand">
                            <small>
                                <img src="/cover.png" alt="" />
                            </small>
                        </a>
                    </div>
                </div>
                <div class="loginbox-or">
                    <div class="or-line"></div>
                </div>
                <div class="loginbox-textbox form-group">
                    <input type="text" class="form-control" placeholder="账号" name="loginid" />
                </div>
                <div class="loginbox-textbox form-group">
                    <input type="password" class="form-control" placeholder="密码" name="pwd" />
                </div>
                <div class="loginbox-submit form-group">
                    <button id="btnSubmit" type="submit" class="btn btn-primary btn-block">登录</button>
                </div>
                <div class="loginbox-signup">
                    <a href="@Url.Action("StudentRegister")">学生注册</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("TeacherRegister")">教师注册</a>
                </div>
                <div class="loginbox-signup">
                    <a href="http://www.winmsoft.com" style="font-size:11px">河南维迈网络科技有限公司</a>
                </div>
            </div>
            @*<div class="logobox loginbox bg-white">
                </div>*@
            <div id="captcha"></div>
        </div>
    </form>

    <!--Basic Scripts-->
    @Scripts.Render("~/beyondadmin/js/basic")

    <!--Beyond Scripts-->
    @Scripts.Render("~/beyondadmin/js/beyond")

    @Scripts.Render("~/Framework/js/abp")

    <script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>

    <script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>

    @Html.IncludeScript("~/beyondadmin/assets/js/validation/bootstrapValidator.js")

    @Html.IncludeScript("~/Views/Account/Login.js")
</body>
<!--Body Ends-->
</html>

