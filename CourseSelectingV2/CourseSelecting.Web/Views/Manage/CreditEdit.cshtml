@using Abp.Web.Mvc.Extensions
@using Abp.Threading.Extensions
@model CourseSelecting.Web.Models.Manage.CreditDetailsModel
@{
    ViewBag.ActiveMenu = "CreditManage";
}

@section Styles
{
    @Html.IncludeStyle("~/beyondadmin/assets/css/dataTables.bootstrap.css")
}
@section Scripts
{
    @Html.IncludeScript("~/beyondadmin/assets/js/validation/bootstrapValidator.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/select2/select2.js")
    @Html.IncludeScript("~/beyondadmin/assets/js/fuelux/spinner/fuelux.spinner.min.js")
    @Html.IncludeScript("~/Views/Manage/CreditEdit.js")
}


<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index")">首页</a>
            </li>
            <li>
                <a href="@Url.Action("CreditManage")">学分管理</a>
            </li>
            <li class="active">编辑学分</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Header -->
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                编辑学分
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- /Page Header -->
    <!-- Page Body -->
    <div class="page-body">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget radius-bordered">
                    <div class="widget-header">
                    </div>
                    <div class="widget-body">
                        <div class="docs-example">
                            <ul class="nav nav-tabs tabs-flat">
                                <li class="active">
                                    <a data-toggle="tab" href="#info-tab">关于学分</a>
                                </li>
                            </ul>
                            <form id="formCourseEdit" class="form-horizontal bv-form" method="post" novalidate="novalidate">

                                <div class="tab-content tabs-flat">
                                    <div class="form-group has-feedback ">
                                        <label class="col-lg-3 control-label">学生姓名</label>
                                        <div class="col-lg-7">
                                            <input class="form-control" value="@Model.Credit.Student.Name" readonly="readonly" placeholder="学生姓名" type="text" name="studentName">
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback ">
                                        <label class="col-lg-3 control-label">项目名称</label>
                                        <div class="col-lg-7">
                                            <input class="form-control" value="@Model.Credit.SubjectProject.Name" readonly="readonly" placeholder="项目名称" type="text" name="subjectName">
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback ">
                                        <label class="col-lg-3 control-label">随堂分数</label>
                                        <div class="col-lg-7">
                                            <input class="form-control" value="@Model.Credit.ClassCredit" placeholder="随堂分数" type="text" name="classCredit">
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback ">
                                        <label class="col-lg-3 control-label">考试分数</label>
                                        <div class="col-lg-7">
                                            <input class="form-control" value="@Model.Credit.ExamCredit" placeholder="考试分数" type="text" name="examCredit">
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback ">
                                        <label class="col-lg-3 control-label">项目分数</label>
                                        <div class="col-lg-7">
                                            <input class="form-control" value="@Model.Credit.SubjectCredit" placeholder="项目分数" type="text" name="subjectCredit">
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-7 col-lg-offset-3">
                                        <input type="hidden" id="lblCreditId" value="@Model.Credit.Id" />
                                        <button type="submit" class="btn btn-blue">&nbsp;提&nbsp;&nbsp;&nbsp;&nbsp;交&nbsp;</button>
                                        <a href="@Url.Action("CreditManage")" class="btn btn-default">&nbsp;返回列表&nbsp;</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Body -->
</div>

